{
  "name": "create-t3-turbo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --continue",
    "biome": "turbo run format-and-lint",
    "biome:fix": "biome check . --write",
    "format-and-lint": "biome check .",
    "typecheck": "turbo run typecheck",
    "clean": "git clean -xdf node_modules .turbo",
    "clean:workspaces": "turbo run clean",
    "list-updates": "ncu -ws",
    "update": "ncu -ws -i",
    "migrate": "bun --cwd packages/db migrate",
    "migrate:dev": "bun --cwd packages/db migrate:dev",
    "build:api": "bun --cwd packages/api build:api",
    "ui-add": "turbo run ui-add",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@rwx/api": "workspace:*",
    "@turbo/gen": "^2.5.0",
    "@types/node": "^22.14.1",
    "husky": "^9.1.7",
    "npm-check-updates": "^17.1.18",
    "turbo": "^2.5.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.2.9",
  "workspaces": ["apps/*", "packages/*", "tooling/*"]
}
