generator client {
  provider = "prisma-kysely"
  output = "../dist"
  fileName = "index.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(dbgenerated("gen_random_uuid()"))
  firstName String
  lastName String
  email String? @unique
  image String?
  accounts Account[]
}

model Account {
  id String @id @default(dbgenerated("gen_random_uuid()"))
  providerId String
  providerName String
  userId String
  user User @relation(fields: [userId], references: [id])
  
  @@unique([providerName, providerId])
}
