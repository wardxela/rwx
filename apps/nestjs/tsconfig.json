{
  "extends": "@rwx/tsconfig/base.json",
  "compilerOptions": {
    "esModuleInterop": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
